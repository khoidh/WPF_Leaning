        </Grid.ColumnDefinitions>
        
        <ContentControl Width="100" Height="100">
            <Grid>
                <!-- Make sure the Checkbox is the foremost element -->
                <CheckBox Grid.ZIndex="99" Style="{StaticResource myCheckboxStyle}"/>
